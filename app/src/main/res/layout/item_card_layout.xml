<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tên -->
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awesome Product"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Giá Tiền -->
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$19.99"
            android:textColor="#00C853"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>

        <!-- Subscript cho Product -->
        <TextView
            android:id="@+id/subscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get 20% off on your first purchase!"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- Layout chứa Icon và Subscription -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Icon 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rating_icon"/>

                <TextView
                    android:id="@+id/subscription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Icon 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rating_icon"/>

                <TextView
                    android:id="@+id/subscription2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Icon 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/rating_icon"/>

                <TextView
                    android:id="@+id/subscription3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>