<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/hinhQuangCao"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chudedulich" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hinhBaiHatQuangCao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/anh1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="15dp">

            <TextView
                android:id="@+id/tenBaiHatQuangCao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Tên bài hát" />

            <TextView

                android:id="@+id/noiDungQuangCao"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mô tả nội dung"
                android:maxLines="3"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>